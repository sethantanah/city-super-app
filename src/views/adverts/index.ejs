<div class="ad-space-hero">
    <div class="hero-content">
      <div class="logo-container">
        <i data-feather="box" class="main-icon"></i>
        <h1>Ad<span class="highlight">Space</span></h1>
      </div>
      
      <p class="tagline">The marketplace for outdoor advertising spaces</p>
      
      <div class="value-props">
        <div class="value-prop">
          <i data-feather="map"></i>
          <h3>Discover</h3>
          <p>Find premium billboard locations across the city</p>
        </div>
        <div class="value-prop">
          <i data-feather="dollar-sign"></i>
          <h3>Monetize</h3>
          <p>List your unused ad spaces and earn revenue</p>
        </div>
        <div class="value-prop">
          <i data-feather="bar-chart-2"></i>
          <h3>Analyze</h3>
          <p>Get insights on traffic and audience demographics</p>
        </div>
      </div>
      
      <div class="coming-soon-section">
        <h2>Launching Soon</h2>
        <p>We're creating the easiest way to buy and sell outdoor advertising space</p>
        
        <div class="components-container">
          <div class="">
            <h3>Join our waitlist</h3>
            <%- include('../components/email-notify-form', { 
                indent: 'adspace-waiting-list', 
                placeholder: 'Get early access to AdSpace',
                buttonText: 'Join Waitlist',
                successMessage: "You've been added to our advertising space waitlist!"
              }); %>
          </div>
          
          <div class="component-card">
            <h3>Follow our journey</h3>
            <%- include('../components/social-links'); %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
