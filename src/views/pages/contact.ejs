<script>
  // Wait for the DOM content to be fully loaded before executing the script
  document.addEventListener("DOMContentLoaded", function () {
    const messageContainer = form.querySelector(".message-container");

    // Handle form submission
    const contactForm = document.getElementById("contactForm");
    if (contactForm) {
      // Add an event listener to the contact form's submit event
      contactForm.addEventListener("submit", function (e) {
        // Prevent the default form submission behavior
        e.preventDefault();

        // Get the form data and convert it to a JavaScript object
        const formData = new FormData(this);
        const data = Object.fromEntries(formData.entries());

        // Send a POST request to the /mailing/send-email endpoint
        fetch("/mailing/send-email", {
          // Specify the request method as POST
          method: "POST",
          // Specify the headers for the request
          headers: {
            // Specify the content type as JSON
            "Content-Type": "application/json",
          },
          // Convert the form data to a JSON string
          body: JSON.stringify(data),
        })
          // Parse the response as JSON
          .then((response) => response.json())
          // Handle the response data
          .then((data) => {
            // Display a success message

            messageContainer.textContent =
              '<%= "Thank you for your message! We will get back to you soon." %>';
            messageContainer.className = "message-container message-success";
            messageContainer.style.display = "block";
            // Reset the form
            this.reset();
          })
          // Catch any errors that occur during the request
          .catch((error) => {
            // Log the error to the console
            console.error("Error:", error);
            // Display an error message

            messageContainer.textContent =
              "Error sending message. Please try again later.";
            messageContainer.className = "message-container message-error";
            messageContainer.style.display = "block";
          });
      });
    }

    // FAQ Accordion functionality
    // Get all elements with the class faq-question
    const faqQuestions = document.querySelectorAll(".faq-question");
    // Iterate over each FAQ question element
    faqQuestions.forEach((question) => {
      // Add an event listener to the question element's click event
      question.addEventListener("click", () => {
        // Get the answer element (the next sibling of the question element)
        const answer = question.nextElementSibling;
        // Toggle the active class on the question and answer elements
        question.classList.toggle("active");
        answer.classList.toggle("active");
      });
    });
  });
</script>
