<!-- Hero Section with Search -->
<div
  class="bg-gradient-to-r from-slate-800 to-slate-900 text-white py-20 relative overflow-hidden"
>
  <!-- Abstract background elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div
      class="absolute top-0 left-1/4 w-full h-full bg-gradient-to-b from-blue-500/20 to-transparent transform -rotate-45"
    ></div>
    <div
      class="absolute bottom-0 right-1/4 w-full h-full bg-gradient-to-t from-indigo-600/20 to-transparent transform rotate-45"
    ></div>
  </div>

  <!-- Animated dots pattern -->
  <div class="absolute inset-0 opacity-10">
    <div
      class="absolute inset-0"
      style="
        background-image: radial-gradient(circle, white 1px, transparent 1px);
        background-size: 20px 20px;
      "
    ></div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-3xl mx-auto text-center">
      <span
        class="inline-block px-4 py-1 rounded-full bg-blue-600/30 text-blue-200 text-sm font-medium mb-6"
        >CITY PLATFORM</span
      >
      <h1 class="text-4xl md:text-5xl font-bold mb-6 leading-tight">
        Your City, <span class="text-blue-400">Your Services</span>
      </h1>
      <p class="text-xl text-slate-200 mb-10">
        Everything you need in one place - jobs, marketplace, events, and more.
      </p>

      <!-- Global Search -->
      <div class="relative max-w-2xl mx-auto group">
        <div
          class="absolute inset-0 bg-blue-500 rounded-full opacity-20 blur-md group-focus-within:opacity-30 transition-opacity"
        ></div>
        <input
          type="text"
          placeholder="What are you looking for?"
          class="w-full py-4 px-8 rounded-full text-gray-800 bg-white/95 backdrop-blur-sm focus:outline-none focus:ring-2 focus:ring-blue-400 shadow-xl"
        />
        <button
          class="absolute right-3 top-1/2 transform -translate-y-1/2 bg-gradient-to-r from-blue-500 to-indigo-600 hover:from-blue-600 hover:to-indigo-700 text-white p-3 rounded-full shadow-lg transition-all"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
            />
          </svg>
        </button>
      </div>

      <!-- Popular searches -->
      <div class="mt-6 flex flex-wrap justify-center gap-2">
        <span class="text-sm text-slate-400 mr-2 mt-1">Popular:</span>
        <a
          href="/jobs"
          class="px-3 py-1 bg-slate-700/50 hover:bg-slate-700 rounded-full text-sm text-slate-200 transition-colors"
          >Jobs</a
        >
        <a
          href="/market"
          class="px-3 py-1 bg-slate-700/50 hover:bg-slate-700 rounded-full text-sm text-slate-200 transition-colors"
          >Marketplace</a
        >
        <a
          href="/events"
          class="px-3 py-1 bg-slate-700/50 hover:bg-slate-700 rounded-full text-sm text-slate-200 transition-colors"
          >Events</a
        >
        <a
          href="/housing"
          class="px-3 py-1 bg-slate-700/50 hover:bg-slate-700 rounded-full text-sm text-slate-200 transition-colors"
          >Housing</a
        >
      </div>
    </div>
  </div>

  <!-- Decorative elements -->
  <div
    class="absolute left-0 bottom-0 w-64 h-64 bg-gradient-to-r from-blue-500 to-blue-600 rounded-full filter blur-3xl opacity-20 transform -translate-x-1/2 translate-y-1/2"
  ></div>
  <div
    class="absolute right-0 top-0 w-64 h-64 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-full filter blur-3xl opacity-20 transform translate-x-1/2 -translate-y-1/2"
  ></div>
</div>

<!-- Quick Access Tabs -->
<div class="bg-white shadow-md">
  <div class="container mx-auto">
    <div class="flex overflow-x-auto py-2 px-4 no-scrollbar">
      <a
        href="/jobs"
        class="flex-shrink-0 px-5 py-3 text-center hover:bg-gray-100 rounded-lg mx-1"
      >
        <i
          data-feather="briefcase"
          class="h-6 w-6 mx-auto mb-1 text-blue-500"
        ></i>
        <span class="text-sm font-medium">Jobs</span>
      </a>
      <a
        href="/market"
        class="flex-shrink-0 px-5 py-3 text-center hover:bg-gray-100 rounded-lg mx-1"
      >
        <i
          data-feather="shopping-bag"
          class="h-6 w-6 mx-auto mb-1 text-green-500"
        ></i>
        <span class="text-sm font-medium">Marketplace</span>
      </a>
      <a
        href="/adverts"
        class="flex-shrink-0 px-5 py-3 text-center hover:bg-gray-100 rounded-lg mx-1"
      >
        <i data-feather="info" class="h-6 w-6 mx-auto mb-1 text-yellow-500"></i>
        <span class="text-sm font-medium">Advertising</span>
      </a>
      <a
        href="/events"
        class="flex-shrink-0 px-5 py-3 text-center hover:bg-gray-100 rounded-lg mx-1"
      >
        <i
          data-feather="calendar"
          class="h-6 w-6 mx-auto mb-1 text-purple-500"
        ></i>
        <span class="text-sm font-medium">Events</span>
      </a>
      <a
        href="/services"
        class="flex-shrink-0 px-5 py-3 text-center hover:bg-gray-100 rounded-lg mx-1"
      >
        <i data-feather="tool" class="h-6 w-6 mx-auto mb-1 text-red-500"></i>
        <span class="text-sm font-medium">Services</span>
      </a>
      <a
        href="/housing"
        class="flex-shrink-0 px-5 py-3 text-center hover:bg-gray-100 rounded-lg mx-1"
      >
        <i data-feather="home" class="h-6 w-6 mx-auto mb-1 text-indigo-500"></i>
        <span class="text-sm font-medium">Housing</span>
      </a>
    </div>
  </div>
</div>

<!-- Main Content -->
<div class="container mx-auto px-4 py-8">
  <!-- Featured Section using our new component -->
  <%- include('components/featured-items', { title: 'Featured in Your Area',
  badgeText:'Local Highlights', description:'',backgroundImage:'', items:
  featuredItems, columns: 3, viewAllLink: '/featured' }) %>

  <!-- Jobs Section -->
  <%- include('components/featured-items', { title: 'Latest Job Opportunities',
  badgeText:'Local Highlights', description:'',backgroundImage:'https://theknowledgeexchangeblog.wordpress.com/wp-content/uploads/2015/06/jobssign2.jpg', items:
  featuredJobs, columns: 3, viewAllLink: '/jobs' }) %>

  <!-- Services Directory -->
  <div>
    <h2 class="text-2xl font-bold mb-6">All City Services</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% services.forEach(service => { %>
      <a
        href="/<%= service.id %>"
        class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow flex items-start"
      >
        <div class="<%= service.color %> text-white p-3 rounded-lg mr-4">
          <i data-feather="<%= service.icon %>" class="h-6 w-6"></i>
        </div>
        <div>
          <h3 class="text-xl font-semibold mb-2"><%= service.name %></h3>
          <p class="text-gray-600"><%= service.description %></p>
        </div>
      </a>
      <% }) %>
    </div>
  </div>
</div>
