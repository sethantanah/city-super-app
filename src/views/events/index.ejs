<div class="events-hero">
    <div class="hero-content">
      <div class="logo-container">
        <i data-feather="calendar" class="main-icon"></i>
        <h1>Local<span class="highlight">Events</span></h1>
      </div>
      
      <p class="tagline">Discover what's happening in your community</p>
      
      <div class="value-props">
        <div class="value-prop">
          <i data-feather="search"></i>
          <h3>Explore</h3>
          <p>Find concerts, markets, and activities near you</p>
        </div>
        <div class="value-prop">
          <i data-feather="heart"></i>
          <h3>Save</h3>
          <p>Bookmark your favorite events</p>
        </div>
        <div class="value-prop">
          <i data-feather="bell"></i>
          <h3>Stay Updated</h3>
          <p>Get alerts for new events in your area</p>
        </div>
      </div>
      
      <div class="event-categories">
        <div class="category-tag">Music</div>
        <div class="category-tag">Food</div>
        <div class="category-tag">Art</div>
        <div class="category-tag">Sports</div>
        <div class="category-tag">Family</div>
      </div>
      
      <div class="coming-soon-section">
        <h2>Coming Soon to Your Neighborhood</h2>
        <p>We're building the best way to connect with your local community</p>
        
        <div class="components-container">
          <div class="">
            <h3>Get Early Access</h3>
            <%- include('../components/email-notify-form', { 
                indent: 'events-waiting-list', 
                placeholder: 'Your email address',
                buttonText: 'Join Waitlist',
                successMessage: "You're on the list! We'll notify you when we launch."
              }); %>
          </div>
          
          <div class="component-card">
            <h3>Follow Us</h3>
            <%- include('../components/social-links'); %>
            <p class="community-text">Join our growing community</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <style>
    .events-hero {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background: linear-gradient(135deg, #fff9f9 0%, #ffe8e8 100%);
      padding: 2rem;
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      color: #2c0505;
    }
    
    .hero-content {
      text-align: center;
      max-width: 1200px;
      width: 100%;
    }
    
    .logo-container {
      margin-bottom: 1.5rem;
    }
    
    .main-icon {
      width: 60px;
      height: 60px;
      stroke: #ff4757;
      stroke-width: 2;
      margin-bottom: 1rem;
    }
    
    h1 {
      font-size: 3.5rem;
      margin: 0;
      font-weight: 800;
    }
    
    .highlight {
      color: #ff4757;
    }
    
    .tagline {
      font-size: 1.5rem;
      color: #5c1a1a;
      margin-bottom: 3rem;
      font-weight: 400;
    }
    
    .value-props {
      display: flex;
      justify-content: center;
      gap: 2rem;
      margin: 3rem 0;
      flex-wrap: wrap;
    }
    
    .value-prop {
      background: white;
      padding: 2rem;
      border-radius: 16px;
      box-shadow: 0 4px 15px rgba(255, 71, 87, 0.1);
      max-width: 280px;
      transition: all 0.3s ease;
    }
    
    .value-prop:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 20px rgba(255, 71, 87, 0.15);
    }
    
    .value-prop i {
      width: 40px;
      height: 40px;
      stroke: #ff4757;
      margin-bottom: 1rem;
    }
    
    .value-prop h3 {
      margin: 0.5rem 0;
      color: #2c0505;
    }
    
    .value-prop p {
      color: #5c1a1a;
      line-height: 1.6;
      margin: 0;
      opacity: 0.9;
    }
    
    .event-categories {
      display: flex;
      justify-content: center;
      gap: 1rem;
      margin: 2rem 0;
      flex-wrap: wrap;
    }
    
    .category-tag {
      background: rgba(255, 71, 87, 0.1);
      color: #ff4757;
      padding: 0.5rem 1.5rem;
      border-radius: 50px;
      font-weight: 500;
      transition: all 0.2s;
    }
    
    .category-tag:hover {
      background: rgba(255, 71, 87, 0.2);
      transform: scale(1.05);
    }
    
    .coming-soon-section {
      background: white;
      padding: 3rem;
      border-radius: 16px;
      max-width: 800px;
      margin: 2rem auto 0;
      box-shadow: 0 4px 15px rgba(255, 71, 87, 0.1);
    }
    
    .coming-soon-section h2 {
      color: #2c0505;
      margin-top: 0;
    }
    
    .coming-soon-section p {
      color: #5c1a1a;
      margin-bottom: 2rem;
      opacity: 0.9;
    }
    
    .components-container {
      display: flex;
      gap: 2rem;
      justify-content: center;
      flex-wrap: wrap;
    }
    
    .component-card {
      background: #fff9f9;
      padding: 2rem;
      border-radius: 12px;
      flex: 1;
      min-width: 300px;
      border: 1px solid rgba(255, 71, 87, 0.1);
    }
    
    .component-card h3 {
      color: #2c0505;
      margin-top: 0;
    }
    
    .community-text {
      margin-top: 1.5rem;
      color: #5c1a1a;
      font-style: italic;
      opacity: 0.8;
    }
  </style>
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Initialize Feather icons
      feather.replace();
      
      // Add animation to category tags
      const tags = document.querySelectorAll('.category-tag');
      tags.forEach((tag, index) => {
        tag.style.animationDelay = `${index * 0.1}s`;
        tag.classList.add('float-in');
      });
    });
  </script>